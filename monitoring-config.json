{
  "name": "cyphr-messenger",
  "monitoring": {
    "healthCheck": {
      "url": "http://localhost:3001/health",
      "interval": 30000,
      "timeout": 5000,
      "retries": 3
    },
    "metrics": {
      "cpu": true,
      "memory": true,
      "disk": true,
      "network": true,
      "responseTime": true
    },
    "alerts": {
      "email": "admin@cyphrmessenger.app",
      "slack": "",
      "thresholds": {
        "cpu": 80,
        "memory": 90,
        "responseTime": 1000,
        "errorRate": 5
      }
    },
    "logs": {
      "level": "info",
      "rotation": "daily",
      "retention": 7,
      "path": "/var/log/cyphr"
    }
  }
}
