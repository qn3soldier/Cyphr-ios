{
  "name": "cyphr-messenger-ios",
  "version": "1.0.0",
  "main": "App.js",
  "description": "Cyphr Messenger - Post-Quantum Secure Messenger for iOS",
  "scripts": {
    "start": "expo start",
    "ios": "expo run:ios",
    "android": "expo run:android",
    "web": "expo start --web",
    "build:ios": "expo build:ios",
    "build:android": "expo build:android",
    "eject": "expo eject",
    "test": "jest"
  },
  "dependencies": {
    "@noble/ciphers": "^1.3.0",
    "@noble/curves": "^0.7.0",
    "@noble/hashes": "^1.8.0",
    "@react-native-async-storage/async-storage": "1.21.0",
    "@react-navigation/bottom-tabs": "^7.0.0",
    "@react-navigation/native": "^7.0.0",
    "@react-navigation/stack": "^7.0.0",
    "@scure/bip39": "^1.6.0",
    "@stellar/stellar-sdk": "^13.3.0",
    "date-fns": "^4.1.0",
    "expo": "~52.0.0",
    "expo-application": "~6.0.0",
    "expo-av": "~15.0.0",
    "expo-build-properties": "~0.13.0",
    "expo-camera": "~16.0.0",
    "expo-crypto": "~14.0.0",
    "expo-device": "~7.0.0",
    "expo-local-authentication": "~15.0.0",
    "expo-media-library": "~17.0.0",
    "expo-notifications": "~0.30.0",
    "expo-secure-store": "~14.0.0",
    "expo-status-bar": "~2.0.0",
    "pqc-kyber": "^0.7.0",
    "react": "^18.3.1",
    "react-native": "0.76.9",
    "react-native-biometrics": "^3.0.1",
    "react-native-elements": "^3.4.3",
    "react-native-gesture-handler": "~2.20.0",
    "react-native-keychain": "^8.2.0",
    "react-native-paper": "^5.12.5",
    "react-native-reanimated": "~3.16.0",
    "react-native-safe-area-context": "4.12.0",
    "react-native-screens": "~4.1.0",
    "react-native-svg": "15.8.0",
    "react-native-toast-message": "^2.3.3",
    "react-native-uuid": "^2.0.2",
    "react-native-vector-icons": "^10.2.0",
    "react-native-webrtc": "^124.0.4",
    "socket.io-client": "^4.8.1",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@react-native-community/cli": "^20.0.1",
    "@types/react": "~18.2.79",
    "@types/uuid": "^10.0.0",
    "jest": "^29.7.0",
    "typescript": "~5.3.3"
  },
  "private": true,
  "expo": {
    "name": "Cyphr Messenger",
    "slug": "cyphr-messenger",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#1a1a2e"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "app.cyphrmessenger.ios",
      "buildNumber": "1.0.0",
      "infoPlist": {
        "NSCameraUsageDescription": "This app needs access to camera for profile photos and QR code scanning.",
        "NSMicrophoneUsageDescription": "This app needs access to microphone for voice messages and calls.",
        "NSFaceIDUsageDescription": "This app uses Face ID for secure authentication.",
        "NSContactsUsageDescription": "This app needs access to contacts to find friends using Cyphr Messenger."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#1a1a2e"
      }
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-secure-store",
      "expo-local-authentication",
      "expo-camera",
      "expo-av"
    ]
  }
}
